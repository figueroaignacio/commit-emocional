---
import { sanityClient } from 'sanity:client';

const posts = await sanityClient.fetch(
  `*[_type == "post" && defined(slug)] | order(publishedAt desc)`,
);
---

<h1>Blog</h1>
<ul>
  {
    posts.map((post: any) => (
      <li>
        <a href={'/posts/' + post.slug.current}>{post.title}</a>
      </li>
    ))
  }
</ul>
