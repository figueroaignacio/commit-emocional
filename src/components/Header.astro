---
const navigation = [
  {
    label: 'Inicio',
    href: '/',
  },
  {
    label: 'Art√≠culos',
    href: '/posts',
  },
];
---

<header class="header">
  <div class="container">
    <nav>
      <ul class="header-list">
        {
          navigation.map((item) => (
            <a href={item.href} class="header-link">
              {item.label}
            </a>
          ))
        }
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    border-bottom: 1px solid var(--border);
  }

  .container {
    width: 100%;
    padding: 1rem;
    margin: 0 auto;
    max-width: 47.75rem;
  }

  .header-list {
    display: flex;
    justify-content: flex-end;
    gap: 1rem;
  }

  .header-link {
    font-size: 0.9rem;
    color: var(--muted-foreground);

    &:hover {
      text-decoration: underline;
      color: var(--accent);
    }
  }
</style>
