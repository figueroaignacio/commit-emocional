---
// Components
import ArrowLeft from '@/icons/ArrowLeft.astro';

const label = Astro.props.label ?? 'Volver';
---

<button class="back-button" onclick="history.back()">
  <ArrowLeft />
  <span>{label}</span>
</button>

<style>
  .back-button {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    border-radius: 0.375rem;
    cursor: pointer;
    font-size: 0.9rem;
    transition:
      background-color 0.2s ease,
      color 0.2s ease;
    z-index: 50;
    margin-bottom: 0.75rem;
    width: fit-content;
  }
</style>
